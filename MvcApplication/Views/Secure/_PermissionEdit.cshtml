@model EncryptedToken.Service.DataStore.Permission

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">@Model.Caption &nbsp;&nbsp;<strong>[&nbsp;</strong>@Model.Name<strong>&nbsp;]</strong></div>
                <div class="panel-body">
                    <form role="form">
                        @Html.HiddenFor(c => c.Id)
                        @Html.HiddenFor(c => c.Name)
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(c => c.Caption, new { @class = "control-label" }):
                                    @Html.TextBoxFor(c => c.Caption, new { @class = "form-control" })
                                </div>
                                <button type="button" class="btn btn-primary" onclick="secureMvc.savePermission(this);">Submit</button>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(c => c.Description, new { @class = "control-label" }):
                                    @Html.TextAreaFor(c => c.Description, new { @class = "form-control", rows = "2" })
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>

</div>
